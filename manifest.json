{
    "manifest_version": 3,
    "name": "Reading Progress Tracker",
    "version": "1.0",
    "description": "A Chrome extension to track and record reading progress on specific websites.",
    "permissions": [
      "storage",
      "activeTab",
      "tabs"
   
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent" : true
      
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"], 
        "js": []
      }
    ],
    "host_permissions": [
      "http://localhost:3000/",
      "http://localhost:5000/"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    }
  }